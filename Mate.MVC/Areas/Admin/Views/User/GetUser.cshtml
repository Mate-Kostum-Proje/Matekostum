@using Mate.Entities.Concrete
@model UserInfo

<div class="container mt-5">

    <div class="card">

        <div class="card-header">
            <h3>Kayıt Ekrani</h3>
        </div>


        <div class="card-body">
            <form asp-action="UserInsert" method="post">

                <div class="row">
                    @* Ekrana bir row atayoruz ve atilan row'u 3 parçaya boluyoruz. 1. parca 2 column dan olusacak label olusacak. Digeri input icin 6 parca ve en son validation mesajlari icin de 4 parça ayiriyoruz*@
                    <div class="col-2">
                        <label asp-for=Name></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=Name />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=SurName></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=SurName />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=TcNo></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=TcNo />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="TcNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=Email></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=Email />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=GSM></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=GSM />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="GSM" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=City></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=City />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=District></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=District />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="District" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=Address></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=Address />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <label asp-for=Password></label>
                    </div>
                    <div class="col-6">
                        <input asp-for=Password />
                    </div>
                    <div class="col-4">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary">Kaydet</button>

                    </div>
                </div>
            </form>

        </div>

    </div>
</div>
@* Burasi Validation kurallarini işleten kutuphanlerdir *@
@section Scripts
{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}