@model Product
<link rel="stylesheet" href="~/assets/css/main.css">
<br />
<br />
<br />
<br />
<br />



<div class="product-detail-container-single-product">
	<div class="product-image-single-product">
		<img src="@Url.Content(Model.PhotoPath)" alt="">
	</div>
	<div class="product-info-single-product">
		<h1 class="product-title-single-product">@Model.ProductName</h1>
		<div class="price-single-product">
			@if (Model.IsSale == true)
			{

				<p>Satış Fiyatı: @Model.UnitPriceForSale TL</p>
			}
			else
			{

				<p>Kiralama Fiyatı: @Model.UnitPriceForRent TL</p>
			}
		</div>
		<p>
			@if (@Model.IsAdult == true)
			{
			<p>Kategori: Yetişkin</p>
			}
			else
			{
			<p>Kategori: Çocuk</p>
			}
		</p>
		<form asp-action="AddToBasket" asp-controller="Basket" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="size-selection-single-product">
                <label asp-for="Sizes">Size:</label>
                <select asp-for="Sizes" id="size-single-product" class="form-control">
                    <option value="8">8</option>
                    <option value="10">10</option>
                    <option value="12">12</option>
                    <option value="14">14</option>
                </select>
            </div>
            
            <div class="quantity-single-product">
                <button type="button" onclick="decreaseValue()">-</button>
                <input asp-for="Amount" id="amountInput" type="number" min="1" max="20" value="1" readonly>
                <button type="button" onclick="increaseValue()">+</button>
            </div>

            <div class="actions-single-product">
                <button type="submit" class="add-to-cart-single-product">Sepete Ekle</button>
                <button type="submit" class="buy-now-single-product">Satın Al</button>

			</div>
		</form>
	</div>
</div>

