﻿@using Mate.MVC.Models.VMs

@model ContactVM

<link rel="stylesheet" href="~/assets/css/main.css" asp-append-version="true" />

<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        <br />
        <p>İLETİŞİM</p>
    </div><!-- End Section Title -->

    <div class="container aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">

        <div class="mb-4 aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
            <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12031.658372664671!2d28.8060712!3d41.0708595!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caaf7ff3259229%3A0xa615ba06fe171dc4!2sMate%20Kostum!5e0!3m2!1sen!2str!4v1733958867193!5m2!1sen!2str" frameborder="0" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div><!-- End Google Maps -->

        <div class="row gy-4">

            <div class="col-lg-4">
                @await Component.InvokeAsync("İletişim")

                <!-- End Info Item -->
            </div>

            <div class="col-lg-8">
                <form asp-controller="Contact" asp-action="İletişim" method="post" class="php-email-form aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <input asp-for="Name" name="Name" class="form-control" placeholder="İsminiz" required="">
                        </div>

                        <div class="col-md-6 ">
                            <input asp-for="Email" class="form-control" name="Email" placeholder="Emailiniz" required="">
                        </div>

                        <div class="col-md-12">
                            <input asp-for="Subject" class="form-control" name="Subject" placeholder="Konu" required="">
                        </div>

                        <div class="col-md-12">
                            <textarea asp-for="Message" class="form-control" name="Message" rows="6" placeholder="Mesajınız" required=""></textarea>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Yükleniyor</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Mesajınız Gönderildi. Teşekkürler!</div>

                            <button type="submit">Mesaj Gönder</button>
                            <br/>
                            <br/>
                            <br/>
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />


                        </div>

                    </div>
                </form>
            </div><!-- End Contact Form -->

        </div>

    </div>

</section>