@using Mate.MVC.Models.VMs
@model List<BasketDetailVM>
<link rel="stylesheet" href="~/assets/css/main.css" asp-append-version="true" />
<br />
<br />
<br />


<section id="designcostum" class="designcostum section">

    <div class="container aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            <div class="col-lg-12 order-1 order-lg-1 text-center">
                <img src="~/assets/img/Mate-Kostum-tasarım-main.png" class="img-fluid" alt="">
            </div>
            <div class="col-lg-12 order-2 order-lg-1 content text-center">
                <h3>Sepetiniz</h3>

            </div>
        </div>
    </div>

    @*Sepet Info*@


    <table class="table">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Beden</th>
                <th>Fiyat</th>
                <th>Miktar</th>
                <th>Toplam Fiyat</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Size</td>
                    <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                    <td>@item.Amount</td>
                    <td>@item.TotalPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                    <td>
                        <a asp-action="RemoveFromBasket" asp-controller="Basket" asp-route-basketDetailId="@item.BasketDetailId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="actions-single-product">
        <a asp-action="ClearBasket" asp-controller="Basket" class="add-to-cart-single-product">Sepeti Temizle</a>
        <form asp-action="PlaceOrder" asp-controller="Order" method="post">
            <button type="submit" class="buy-now-single-product">Sipariş Ver</button>
        </form>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</section>
