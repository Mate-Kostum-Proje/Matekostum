<header id="header" class="header d-flex align-items-center fixed-top">
	<div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
		<a asp-area="" asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-lg-0">
			<!-- Uncomment the line below if you also wish to use an image logo -->
			<!-- <img src="assets/img/logo.png" alt=""> -->
			
			<img class="img-fluid " src="~/assets/img/mate_yeni_logo.png" alt="..." />
		</a>
		<nav id="navmenu" class="navmenu">
			<ul>
				<li><a asp-area="" asp-controller="Home" asp-action="Index">AnaSayfa<br></a></li>
				<li><a asp-area="" asp-controller="Home" asp-action="Hakkımızda">Hakkımızda</a></li>
				<li class="dropdown">
					<a asp-area="" asp-controller="Costum" asp-action="ProductKiralık"><span>Kostüm Kiralama</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
					<ul>
						<li><a asp-area="" asp-controller="Costum" asp-action="ProductKiralıkHalkoyun">Halk Oyunları</a></li>
						<li><a asp-area="" asp-controller="Costum" asp-action="ProductKiralıkBindal">Bindallı ve Kına</a></li>
						<li><a asp-area="" asp-controller="Costum" asp-action="ProductKiralıkDans">Stilize Dans</a></li>
						<li><a asp-area="" asp-controller="Costum" asp-action="ProductKiralıkRond">Rond Tören</a></li>

					</ul>
				</li>
				<li class="dropdown">
					<a asp-area="" asp-controller="Costum" asp-action="ProductSatılık"><span>Kostüm Satış</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
					<ul>
						<li><a asp-area="" asp-controller="Costum" asp-action="ProductSatılıkHalkoyun">Halk Oyunları</a></li>
						<li><a asp-area="" asp-controller="Costum" asp-action="Tasarım">Tasarım</a></li>
					</ul>
				</li>
				<li><a asp-area="" asp-controller="Home" asp-action="Galeri">Galeri</a></li>
				<li><a asp-area="" asp-controller="Contact" asp-action="İletişim">İletişim</a></li>
			</ul>
			<i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
		</nav>
		 @if (User.Identity.IsAuthenticated)
         {
			<a class="btn-getstarted" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
			
		 }
		 else
         {
			<a class="btn-getstarted" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
		 }
		<div><a class="button" asp-controller="Basket" asp-action="BasketInside"><i class="bi bi-cart"></i></a></div>
		@if (User.Identity.IsAuthenticated)
        {
			<div><a class="button" asp-controller="Order" asp-action="OrderDetails"><i class="bi bi-person-circle"></i></a></div>
		}

	</div>
</header>